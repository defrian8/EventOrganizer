<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_list_jenis_tiket"
        app:cardCornerRadius="0dp"
        app:cardUseCompatPadding="true"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rel_layout_jenis_tiket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linear_pilih_jenis_tiket"
                android:layout_alignParentLeft="true"
                android:layout_width="20dp"
                android:orientation="horizontal"
                android:background="#4778DE"
                android:layout_height="90dp">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_alignParentStart="@+id/linear_pilih_jenis_tiket"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingLeft="40dp"
                android:layout_height="90dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:id="@+id/tv_nama_jenis_tiket"
                    android:text="Jenis Ticket"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingTop="10dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_jenis_tiket_harga"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="20sp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="20202020"
                        />
                    <TextView
                        android:id="@+id/tv_jenis_tiket_stok"
                        android:layout_width="wrap_content"
                        android:textSize="20sp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:text="20"
                        />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>