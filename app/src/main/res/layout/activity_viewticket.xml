<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="id.pens.eventorganizer.ViewticketActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/header_tiket_qr"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/bg_bacl"
            android:fitsSystemWindows="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            />
        <id.pens.eventorganizer.MyTextView
            android:id="@+id/tv_nama_event"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sasjansjas asjansasas ajsasas"
            android:textColor="#fff"
            android:textSize="14pt"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/eighty_percent_layout_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-60dp"
        android:gravity="center"
        android:weightSum="1">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:cardview="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_ticket"
            android:layout_width="0dp"
            android:layout_height="320dp"
            android:clickable="true"
            android:layout_gravity="center_vertical"
            cardview:cardCornerRadius="4dp"
            cardview:cardElevation="4dp"
            android:layout_weight="0.8"

            cardview:cardUseCompatPadding="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imageview_ticket"
                    android:layout_width="200dp"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center|top"
                    android:layout_height="200dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center|top"
                    android:text="anamama"
                    android:id="@+id/tv_tiket_nama_attender"
                    android:textSize="14pt"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center|top"
                    android:text="anamama"
                    android:id="@+id/tv_tiket_jenis_tiket"
                    android:textSize="11.5pt"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
>

        <Button
            android:id="@+id/btn_view_ticket_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:background="#7460EE"
            android:text="DONE"
            android:textColor="#FFF" />

    </RelativeLayout>
</LinearLayout>
